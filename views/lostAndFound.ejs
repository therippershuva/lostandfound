<div class="container p-0 my-5">
    <div class="border shadow-sm rounded-2 bg-primary-subtle">
        <div class="row m-0">
            <div class="col p-5 rounded-start-2">
                <ul
                    class="nav nav-pills mb-3 flex-column"
                    id="pills-tab"
                    role="tablist"
                >
                    <li class="nav-item" role="presentation">
                        <button
                            class="nav-link active fs-5 w-100"
                            id="pills-home-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-home"
                            type="button"
                            role="tab"
                            aria-controls="pills-home"
                            aria-selected="true"
                        >
                            Report Lost
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button
                            class="nav-link fs-5 w-100"
                            id="pills-profile-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-profile"
                            type="button"
                            role="tab"
                            aria-controls="pills-profile"
                            aria-selected="false"
                        >
                            Report Found
                        </button>
                    </li>
                </ul>
            </div>

            <div class="col-9 p-5 bg-white">
                <div class="tab-content" id="pills-tabContent">
                    <div
                        class="tab-pane fade show active"
                        id="pills-home"
                        role="tabpanel"
                        aria-labelledby="pills-home-tab"
                        tabindex="0"
                    >
                        <div id="lost-form">
                            <h2 class="card-title pb-4">Report Lost</h2>
                            <form
                                action="/item/report-lost"
                                method="post"
                                enctype="multipart/form-data"
                            >
                                <div class="mb-3">
                                    <label for="name">Name</label>
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="name"
                                        name="name"
                                        placeholder="Enter name"
                                        required
                                    />
                                </div>
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <textarea
                                        class="form-control"
                                        id="description"
                                        name="description"
                                        rows="3"
                                        placeholder="Enter description"
                                        required
                                    ></textarea>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <label for="lastSeenDate"
                                            >Last seen date</label
                                        >
                                        <input
                                            type="date"
                                            name="lastSeenDate"
                                            class="form-control"
                                            id="lastSeenDate"
                                            required
                                        />
                                    </div>
                                    <div class="col">
                                        <label for="lastLocation"
                                            >Last location</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            name="lastLocation"
                                            id="lastLocation"
                                            placeholder="Enter last location"
                                            required
                                        />
                                    </div>
                                    <div class="col">
                                        <label for="category">Category</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="category"
                                            name="category"
                                            placeholder="Enter category"
                                            required
                                        />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="images" class="form-label"
                                        >Images</label
                                    >
                                    <input
                                        class="form-control"
                                        type="file"
                                        id="images"
                                        name="images"
                                        accept="image/*"
                                        multiple
                                        max="4"
                                        placeholder="Choose max 4 images"
                                    />
                                    <p class="text-info">
                                        Max 4 photos allowed
                                    </p>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button
                                        type="submit"
                                        class="btn btn-primary btn-lg mt-3 w-25"
                                    >
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div
                        class="tab-pane fade"
                        id="pills-profile"
                        role="tabpanel"
                        aria-labelledby="pills-profile-tab"
                        tabindex="1"
                    >
                        <div id="found-form">
                            <h2 class="card-title pb-4">Report Found</h2>
                            <form
                                action="/item/report-found"
                                method="post"
                                enctype="multipart/form-data"
                            >
                                <div class="mb-3">
                                    <label for="name">Name</label>
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="name"
                                        name="name"
                                        placeholder="Enter name"
                                        required
                                    />
                                </div>
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <textarea
                                        class="form-control"
                                        id="description"
                                        name="description"
                                        rows="3"
                                        placeholder="Enter description"
                                        required
                                    ></textarea>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <label for="foundDate"
                                            >Found date</label
                                        >
                                        <input
                                            type="date"
                                            name="foundDate"
                                            class="form-control"
                                            id="foundDate"
                                            required
                                        />
                                    </div>
                                    <div class="col">
                                        <label for="foundLocation"
                                            >Found location</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            name="foundLocation"
                                            id="foundLocation"
                                            placeholder="Enter found location"
                                            required
                                        />
                                    </div>
                                    <div class="col">
                                        <label for="category">Category</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="category"
                                            name="category"
                                            placeholder="Enter category"
                                            required
                                        />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="images" class="form-label"
                                        >Images</label
                                    >
                                    <input
                                        class="form-control"
                                        type="file"
                                        id="images"
                                        name="images"
                                        accept="image/*"
                                        multiple
                                        max="4"
                                        placeholder="Choose max 4 images"
                                    />
                                    <p class="text-info">
                                        Max 4 photos allowed
                                    </p>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button
                                        type="submit"
                                        class="btn btn-primary btn-lg mt-3 w-25"
                                    >
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
