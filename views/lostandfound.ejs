<div class="container-md">
    <div class="login-wrap">
        <div
            class="login-html"
            style="
                background: linear-gradient(
                    to right,
                    rgba(40, 57, 101, 0.9),
                    rgba(62, 47, 120, 0.9)
                );
            "
        >
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked /><label
                for="tab-1"
                class="tab"
                >Find Item</label
            >
            <input id="tab-2" type="radio" name="tab" class="sign-up" /><label
                for="tab-2"
                class="tab"
                >Report Item</label
            >
            <div class="login-form">
                <form action="/item/add" method="post" class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label">Item Description</label>
                        <input id="user" name="description" type="text" class="input" />
                    </div>
                    <div class="group">
                        <label for="lastLocation" class="label">Last Location</label>
                        <input id="lastLocation" name="lastLocation" type="text" class="input" />
                    </div>
                    <div class="group" style="margin-bottom: 5rem">
                        <label for="image" class="label">Images</label>
                        <!-- <input id="image" type="file" /> -->
                        <div class="file-input">
                            <input type="file" id="file" class="file" />
                            <label for="file">
                                Select file
                                <p class="file-name"></p>
                            </label>
                        </div>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Submit" />
                    </div>
                </form>
                <div class="sign-up-htm">
                    <div class="group">
                        <label for="user" class="label">Item Description</label>
                        <input id="user" type="text" class="input" />
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Found Location</label>
                        <input id="pass" type="password" class="input" data-type="password" />
                    </div>
                    <div class="group" style="margin-bottom: 5rem">
                        <label for="image" class="label">Images</label>
                        <!-- <input id="image" type="file" /> -->
                        <div class="file-input">
                            <input type="file" id="file" class="file" />
                            <label for="file">
                                Select file
                                <p class="file-name"></p>
                            </label>
                        </div>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Submit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
